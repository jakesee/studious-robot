{% extends 'app.twig' %}
{% block content %}
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-6 col-xs-12 mx-auto">
			<div class="card">
				<img class="card-img-top" src="resources/bg1.jpg"></img>
				<div class="card-body">
					<h1 class="card-title">Sign In</h1>
					<p class="card-text">Sign in to manage your services and subscriptions.</p>
					<form action="{{ path_for('guest.signin') }}" method="post">
						<div class="form-group">
							<label for="email">Email</label>
							<input name="email" class="form-control {{ session.danger.email ? " is-invalid" : "" }}" type="email" id="email" value="{{ session.params.email }}">
							<small class="form-text">{{ session.danger.email | first }}</small>
						</div>

						<div class="form-group">
							<label for="password">Password</label>
							<input name="password" class="form-control {{ s.danger.password ? " is-invalid" : "" }}" type="password" id="password">
							<small class="form-text">{{ s.danger.password | first }}</small>
						</div>

						<button type="submit">Sign up</button>

						{{ session.csrf_token | raw }}

					</form>	
				</div>
			</div>
		</div>
	</div>
	
</div>
{% endblock %}