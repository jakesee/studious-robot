{% extends 'app.twig' %}
{% block content %}
<div class="container">
	<table class="table table-striped">
	<thead>
		<tr>
			<th></th>
			<th>name</th>
			<th>company</th>
			<th>address</th>
			<th>phone</th>
			<th>email</th>
		</tr>
	</thead>
	<tbody>
{% for contact in contacts %}
	<tr>
		<td><a href="{{path_for('me.contact.edit', {id: contact.id})}}">{{ contact.id }}</a></td>
		<td>{{ contact.name }}</td>
		<td>{{ contact.company }}</td>
		<td>{{ [contact.address1,contact.address2,contact.address3] | join }}</td>
		<td>{{ contact.phone }}</td>
		<td>{{ contact.email }}</td>
	</tr>
{% endfor %}
</tbody>
</table>
</div>

  <div class="container">
<form action="{{path_for('me.contacts')}}" method="post">
	<div class="form-group">
		name <input class="form-control" type="text" name="name" value="{{form.name}}">
		<small class="help-text">{{error.name | first}}</small>
	</div>
	<div class="form-group">
		company <input class="form-control" type="text" name="company" value="{{form.company}}">
		<small class="help-text">{{error.company | first}}</small>
	</div>
	<div class="form-group">
		address1 <input class="form-control" type="text" name="address1" value="{{form.address1}}">
		<small class="help-text">{{error.address1 | first}}</small>
	</div>
	<div class="form-group">
		address2 <input class="form-control" type="text" name="address2" value="{{form.address2}}">
		<small class="help-text">{{error.address2 | first}}</small>
	</div>
	<div class="form-group">
		address3 <input class="form-control" type="text" name="address3" value="{{form.address3}}">
		<small class="help-text">{{error.address3 | first}}</small>
	</div>
	<div class="form-group">
		phone <input class="form-control" type="text" name="phone" value="{{form.phone}}">
		<small class="help-text">{{error.phone | first}}</small>
	</div>
	<div class="form-group">
		email <input class="form-control" type="text" name="email" value="{{form.email}}">
		<small class="help-text">{{error.email | first}}</small>
	</div>
	<button type="submit">Add contact</button>
	
</form>
</div>

{% endblock %}